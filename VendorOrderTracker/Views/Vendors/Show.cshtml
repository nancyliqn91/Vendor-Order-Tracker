@{
  Layout = "_Layout";
}

@using VendorOrderTracker.Models;

<h3>Here are all the orders in @Model["vendor"].Name</h3>

<ol>
@foreach (Order order in @Model["orders"])
{
  <li><a href='/vendors/@Model["vendor"].Id/orders/@order.Id'>Title: @order.Title, Description: @order.Description.</a></li>
}
</ol>
<br>
<p><a href='/vendors/@Model["vendor"].Id/orders/new'>Add a new order</a></p>
<p><a href='/vendors'>Return to vendors list</a></p>
<p><a href='/'>Back Home</a></p>

<form action="/vendors/@Model["vendor"].Id/delete" method="post">
<button class="btn btn-warning" type="submit" name="button">Clear All Orders</button>
</form>
